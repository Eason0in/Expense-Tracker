<form action="/records/edit" method="POST">
  <div class="container mt-4">
    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label class="h6">*必填欄位</label>
      </div>

      <div class="col-4  d-flex">
        <label class="h6">請修改你的支出</label>
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="name" class="h3">名稱*:</label>
      </div>

      <div class="col-4">
        <input type="text" class="form-control" id="name" placeholder="捷運">
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2  d-flex justify-content-center">
        <label for="date" class="h3">日期*:</label>
      </div>

      <div class="col-4">
        <input type="date" class="form-control" id="date" placeholder="2019/04/23">
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="category" class="h3">類別*:</label>
      </div>

      <div class="col-4">
        <select id="category" class="form-control">
          <option selected>交通</option>
          <option>...</option>
        </select>
      </div>
    </div>


    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="amount" class="h3">金額*:</label>
      </div>

      <div class="col-4">
        <input type="number" class="form-control" id="amount" placeholder="120">
      </div>
    </div>


    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2">
      </div>

      <div class="col-4">
        <button type="submit" class="btn btn-primary btn-block">送出</button>
      </div>
    </div>

  </div>
</form>